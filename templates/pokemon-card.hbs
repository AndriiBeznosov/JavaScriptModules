<div class='card'>
  <div class='card-img-top'>
    <img src='{{sprites.front_default}}' alt='{{name}}' />
  </div>
  <div class='card-body'>
    <h2 class='card-title'>Имя: {{name}}</h2>
    <p class='list-text'>Вес: {{weight}}кг.</p>
    <p class='list-text'>Рост: {{height}}см.</p>

    <p class='list-text'><b>Умения</b></p>
    <ul class='list-group'>
      {{#each abilities}}
        <li class='list-group-item'>{{ability.name}}</li>
      {{/each}}
    </ul>
  </div>
</div>